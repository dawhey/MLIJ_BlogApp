<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/nav_header_gradient"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:id="@+id/nav_bar_logo"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo_about"
        android:tint="@color/blogBackground"
        android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:id="@+id/nav_bar_title"
            android:textSize="22sp"
            android:paddingTop="@dimen/default_app_padding"
            android:layout_toEndOf="@id/nav_bar_logo"
            android:paddingEnd="@dimen/default_app_padding"
            android:elevation="4dp"
            android:textColor="@color/blogBackground"
            android:text="Młodość \nLily i Jamesa"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_centerVertical="true"
            tools:ignore="MissingPrefix" />
</RelativeLayout>
